<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/material_gray_600</item>
        <item name="colorPrimaryDark">@color/material_gray_900</item>
        <item name="colorAccent">@color/material_gray_800</item>
        <item name="dialogTheme">@style/AppTheme.Dialog.Gray</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert.Gray</item>
    </style>

    <!-- Default Dialog Theme -->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
    </style>

    <style name="AppTheme.Dialog.Gray">
        <item name="colorPrimary">@color/material_gray_500</item>
        <item name="colorPrimaryDark">@color/material_gray_700</item>
        <item name="colorAccent">@color/material_gray_800</item>
    </style>

    <!-- Default Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
    </style>

    <!-- red Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert.Gray">
        <item name="colorPrimary">@color/material_gray_500</item>
        <item name="colorPrimaryDark">@color/material_gray_700</item>
        <item name="colorAccent">@color/material_gray_800</item>
    </style>

    <style name="AppTheme.RatingBar.Small" parent="Widget.AppCompat.RatingBar.Small" />

    <!-- Light App Bar Theme -->
    <style name="AppTheme.AppBar.Light" parent="ThemeOverlay.AppCompat.ActionBar" />

    <!-- Dark App Bar Theme -->
    <style name="AppTheme.AppBar.Dark" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Light Overlay Theme -->
    <style name="AppTheme.Overlay.Light" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Dark Overlay Theme -->
    <style name="AppTheme.Overlay.Dark" parent="ThemeOverlay.AppCompat.Dark" />

</resources>
